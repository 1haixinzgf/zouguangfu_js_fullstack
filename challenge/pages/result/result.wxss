.desc-title {
    padding-top: 20rpx;
    width: 200rpx;
    margin: 0 auto;
    text-align: center;
    font-size: 42rpx;
    color: #020202;
    position: relative;
}
.desc-title:after {
    position: absolute;
    content: '';
    width: 150rpx;
    height: 4rpx;
    background-color: #eaeaea;
    right: 250rpx;
    top: 55rpx;
}
.desc-title:before {
    position: absolute;
    content: '';
    width: 150rpx;
    height: 4rpx;
    background-color: #eaeaea;
    left: 250rpx;
    top: 55rpx;
}
.desc-rule {
    width: 700rpx;
