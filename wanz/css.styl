base-color = #152131

body
  font-size 20px

body, div
  margin 0
  padding 0
  background #ffef5e

.border
  border 1px solid base-color

.main
  position relative
  width 700px
  margin 50px auto

.wanzi
  position absolute
  top 250px
  left 100px
  z-index 10

  .hairs
    background base-color
    width 190px
    height 250px
    left -30px
    top -50px
    position absolute
    border-radius 50% 50% 0 0
    overflow hidden


    &:after
     content ''
     position absolute
     width 300px
     height 200px
     background #ffef0e 
     top 120px

    .hair 
      width 35px
      height 45px
      background base-color
      position absolute
      z-index 1
      transform rotate(70deg) scale(1) skew(44deg) translate(8px)

      &.hair1
        top 17px
        left 27px
      &.hair2
        top 8px
        left 52px
      &.hair3
        top 4px
        left 73px
      &.hair4
        top 0
        left 90px
      &.hair5
        top 4px
        left 108px
      &.hair6
        top 8p
        left 125px
      &.hair7
        top 17px
        right 17px

  .face
    background #fbdac7
    width 130px
    height 100px
    position absolute
    top 0
    border-radius 20px 20px 50px 50px

    &ï¼šafter
      content ''
      width 140px
      height 10px
      background #fbdac7
      position absolute
      bottom -12px
      left 50%
      margin-left -7px
    
    .brow
         width 42px
         height 10px
         background base-color
         position absolute
         top 26px
         border-radius 50%
          
        &.left-brow
            left 18px
            transform rotate(-10deg)

        &.right-brow
            left 14px
            transform rotate(10deg)

    .eye
        width 8px
        height 8px
        background #000000 
        position absolute
        top 40px
        border-radius 50%
        z-index 2

        &.left-eye
            left 32%
              
        &.right-eye
             right 32%

